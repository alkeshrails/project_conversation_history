<div class="section-1-container section-container max-w-[1200px] m-auto">
  <div class="container">
    <div class="col-md-4 col-md-offset-4">
      <h1 class="font-extrabold text-center mt-10 text-[30px]"><%= t('.forgot_your_password') %></h1>

      <div class="w-full max-w-[500px] m-auto">
        <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= bootstrap_devise_error_messages! %>
            <div class="mb-4">
              <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
                <%= f.label :email %>
              </label>

              <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
            </div>
          
            <div class="block items-center">
              <%= f.submit t('.send_me_reset_password_instructions'), class: 'bg-teal-500 hover:bg-teal-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline mr-2 w-full mb-4' %>

              <%= render 'devise/shared/links'%>
            </div>
          <% end %>
          <br />
        </div>
      </div>
    </div>
  </div>
</div>
