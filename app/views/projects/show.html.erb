<h1><%= @project.name %></h1>

<p>Status: <%= @project.status %></p>

<% if @project.status_changes.present? %>
  <h2>Status Changes</h2>
  <% @project.status_changes.each do |status_change| %>
    <p>
      <%= status_change.description %>
    </p>
  <% end %>
<% end %>

<h2>Add Comment</h2>
<%= form_with(model: [@project, @comment], url: project_comments_path(@project), local: true) do |form| %>
  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, rows: 4 %>
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="actions">
    <%= form.submit 'Add Comment' %>
  </div>
<% end %>

<% if @comments.present? %>
  <h2>Comments</h2>
  <% @comments.each do |comment| %>
    <p><strong><%= comment.user.email %>:</strong> <%= comment.body %></p>
  <% end %>
<% end %>
