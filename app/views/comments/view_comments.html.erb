<% if @comments.present? %>
  <section class="block m-auto w-100 max-w-[1200px] mt-5">
    <div class="container">
      <div class="row">
        <h1 class="font-extrabold text-center mt-10 mb-4 text-[30px]">Comments</h1>
        <div class="card m-12 ml-0 mr-0">
          <div class="card-body">
            <div class="row">
              <p>
                <table class="table-fixed Air-Pollution w-[1200px] m-auto ">
                  <thead class="bg-gray-100">
                    <tr>
                      <th class="px-4 py-2 text-left" scope="col">Email</th>
                      <th class="px-4 py-2 text-left" scope="col">Comment</th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @comments.each do |comment| %>
                      <tr>
                        <td class="border px-4 py-2"><%= comment.user.email %></td>
                        <td class="border px-4 py-2"><%= comment.body %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<% else %>
  <h1 class="text-center text-lg mt-10">No comments available.</h1>
<% end %>
